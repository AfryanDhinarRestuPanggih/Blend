<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/strawberry_gradient"
        tools:context=".StrawberryActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back Button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_favorite_border_24"
            android:contentDescription="Favorite Icon"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text="Strawberry Thai Smoothies"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Image -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:src="@drawable/strawberry"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <!-- Selamat Mencoba -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="Selamat Mencoba"
        android:textSize="12sp"
        android:textColor="#FFFFFF" />

    <!-- Bahan-Bahan -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:text="Bahan-Bahan :"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:paddingTop="8dp"
        android:text="• Strawberry beku 15 butir\n• 225 ml susu cair strawberry\n• 1 sacset susu kental\n• 3 sdm gula pasir\n• Es batu"
        android:textSize="16sp"
        android:textColor="#FFFFFF" />

    <!-- Langkah-Langkah -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:text="Langkah-Langkah :"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:paddingTop="8dp"
        android:text="• Masukkan Semua bahan.\n• Blender semua bahan hingga halus.\n• Tuang ke dalam gelas."
        android:textSize="16sp"
        android:textColor="#FFFFFF" />

</LinearLayout>
