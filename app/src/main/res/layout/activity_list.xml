<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Item 1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Background Rectangle -->
            <View
                android:id="@+id/background1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#E0E0E0"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp" />

            <!-- Image -->
            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/mangonew"
                android:contentDescription="Gambar Manggo Thai Smoothies"
                android:scaleType="centerCrop" />

            <!-- Title -->
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image1"
                android:text="Manggo Thai Smoothies"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <!-- Item 2 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Background Rectangle -->
            <View
                android:id="@+id/background2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="5dp" />

            <!-- Image -->

            <!-- Title -->
            <ImageView
                android:id="@+id/image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="Gambar Nutella Blend"
                android:scaleType="centerCrop"
                android:src="@drawable/nutela" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image2"
                android:text="Nutella Blend"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <!-- Item 3 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Background Rectangle -->
            <View
                android:id="@+id/background3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="5dp" />

            <!-- Image -->
            <ImageView
                android:id="@+id/image3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/greengoblin"
                android:contentDescription="Gambar Green Goblin"
                android:scaleType="centerCrop" />

            <!-- Title -->
            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image3"
                android:text="Green Goblin"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
